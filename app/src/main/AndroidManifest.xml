<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo_circle"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.Myormawa">

        <!-- LAUNCHER -->
        <activity
            android:name=".views.splash.SplashActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding -->
        <activity
            android:name=".views.onboarding.OnboardingActivity"
            android:exported="false" />

        <!-- Authentication -->
        <activity
            android:name=".views.auth.RoleSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.RegisterVerificationActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.RegisterSuccessActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.ForgotPasswordVerificationActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.SetNewPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".views.auth.ResetPasswordSuccessActivity"
            android:exported="false" />

        <!-- Dashboard -->
        <activity
            android:name=".views.dashboard.student.DashboardStudentActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>