<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C4EEF">

    <!-- Header Section - FIXED (BLUE) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Calendar"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Scrollable Content (WHITE BACKGROUND) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_calendar_background"
            android:paddingTop="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Month Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btn_prev_month"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@drawable/shape_calendar_arrow"
                    android:padding="8dp"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/txt_month_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="November 2025"
                    android:textColor="#1A1A1A"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btn_next_month"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/shape_calendar_arrow"
                    android:padding="8dp"
                    app:tint="#000000" />
            </LinearLayout>

            <!-- Day Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    style="@style/CalendarDayLabel"
                    android:text="Su" />
                <TextView
                    style="@style/CalendarDayLabel"
                    android:text="Mo" />
                <TextView
                    style="@style/CalendarDayLabel"
                    android:text="Tu" />
                <TextView
                    style="@style/CalendarDayLabel"
                    android:text="We" />
                <TextView
                    style="@style/CalendarDayLabel"
                    android:text="Th" />
                <TextView
                    style="@style/CalendarDayLabel"
                    android:text="Fr" />
                <TextView
                    style="@style/CalendarDayLabel"
                    android:text="Sa" />
            </LinearLayout>

            <!-- Calendar Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_calendar_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false" />

            <!-- Legend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/shape_calendar_selected"
                    android:layout_marginEnd="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hari ini"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#1A1A1A"
                    android:textSize="12sp"
                    android:layout_marginEnd="16dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/shape_event_indicator"
                    android:layout_marginEnd="6dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ada event"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#1A1A1A"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Selected Date Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#2C4EEF"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/txt_selected_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="22 November 2025"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layout_empty_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginBottom="16dp"
                    app:tint="#CCCCCC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak ada kegiatan hari ini"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum ada event atau kegiatan yang dijadwalkan\npada tanggal ini. Tetap pantau kalender untuk\nupdate terbaru!"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#8C8C8C"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Events List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>