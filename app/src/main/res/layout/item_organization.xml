<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/img_organization_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_graduation_filled"
                android:padding="12dp"
                android:background="@drawable/shape_organization_logo"
                app:tint="#FFFFFF" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_organization_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="BEM KM"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/txt_organization_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Lembaga"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    app:tint="#8C8C8C" />

                <TextView
                    android:id="@+id/txt_member_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="45 anggota"
                    android:textColor="#8C8C8C"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_organization_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Badan Eksekutif Mahasiswa Keluarga Mahasiswa"
                android:textColor="#8C8C8C"
                android:textSize="11sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>