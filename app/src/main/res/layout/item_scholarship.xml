<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Poster 3:4 Ratio -->
        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_scholarship_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Scholarship Poster"/>
        </androidx.cardview.widget.CardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Header with Title and Arrow -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/txt_scholarship_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Beasiswa PPA 2025"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <!-- Arrow Right Icon -->
                <ImageView
                    android:id="@+id/img_arrow_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#8C8C8C"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Provider -->
            <TextView
                android:id="@+id/txt_scholarship_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kementrian Pendidikan"
                android:textColor="#8C8C8C"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"/>

            <!-- Nominal Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nominal"
                    android:textColor="#8C8C8C"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txt_scholarship_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 4.000.000/semester"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Deadline Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline"
                    android:textColor="#8C8C8C"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txt_scholarship_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 November 2025"
                    android:textColor="#1A1A1A"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>