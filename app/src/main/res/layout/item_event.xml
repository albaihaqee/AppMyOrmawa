<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Poster 3:4 Ratio -->
        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_event_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Event Poster"/>
        </androidx.cardview.widget.CardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Category Badge -->
            <TextView
                android:id="@+id/txt_event_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workshop"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/shape_event_category_badge"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:layout_marginBottom="5dp"/>

            <!-- Title -->
            <TextView
                android:id="@+id/txt_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Workshop UI/UX Design for Beginner"
                android:textColor="#1A1A1A"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"/>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_graduation"
                    app:tint="#8C8C8C"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/txt_event_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab Multimedia Gedung JTI"
                    android:textColor="#8C8C8C"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Date & Participants -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Date -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#8C8C8C"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/txt_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 Nov 2025"
                    android:textColor="#1A1A1A"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_medium"/>

                <!-- Participants -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_profile"
                    app:tint="#8C8C8C"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/txt_event_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 peserta"
                    android:textColor="#8C8C8C"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Arrow Right Icon -->
        <ImageView
            android:id="@+id/img_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="#8C8C8C"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>