<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header Section - Konsisten dengan Profile Fragment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C4EEF"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                app:tint="#FFFFFF"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Data Pribadi"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="32dp"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- Avatar Section -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/txt_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_avatar"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="HM"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/shape_status_online" />

                <FrameLayout
                    android:id="@+id/btn_change_photo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginBottom="-2dp"
                    android:background="@drawable/shape_camera_icon_background">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera"
                        app:tint="#FFFFFF"
                        android:contentDescription="Change Photo" />
                </FrameLayout>
            </FrameLayout>

            <!-- Nama Lengkap -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Nama Lengkap"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_nama_lengkap"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:boxBackgroundColor="#F8F8F8"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/text_input_stroke"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/text_input_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_nama_lengkap"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="none"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:text="Hilmi Madani"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- NIM -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="NIM"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_nim"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:boxBackgroundColor="#F8F8F8"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/text_input_stroke"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_card"
                app:startIconTint="@color/text_input_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_nim"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="none"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:text="E41242025"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:boxBackgroundColor="#F8F8F8"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/text_input_stroke"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/text_input_icon"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="#2C4EEF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="none"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:text="e41242025@student.polije.ac.id"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Program Studi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Program Studi"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_program_studi"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:boxBackgroundColor="#F8F8F8"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/text_input_stroke"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_graduation"
                app:startIconTint="@color/text_input_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_program_studi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="none"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:text="Teknik Informatika"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Angkatan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Angkatan"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_angkatan"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="#F8F8F8"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/text_input_stroke"
                app:boxStrokeWidth="1dp"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="@color/text_input_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_angkatan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="none"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:text="2024"
                    android:textColor="#1A1A1A"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>