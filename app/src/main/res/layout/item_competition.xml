<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Poster 3:4 Ratio -->
        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_competition_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Competition Poster"/>
        </androidx.cardview.widget.CardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/txt_competition_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hackathon AI Innovation"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"/>

            <!-- Organizer -->
            <TextView
                android:id="@+id/txt_competition_organizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HMJ Teknologi Informasi"
                android:textColor="#8C8C8C"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"/>

            <!-- Registration Period -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#8C8C8C"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/txt_competition_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-12 Januari 2026"
                    android:textColor="#8C8C8C"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

            <!-- Prize & Deadline Badges -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Prize Badge -->
                <TextView
                    android:id="@+id/txt_competition_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Hadiah 15 Juta"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/shape_badge_prize"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"/>

                <!-- Deadline Badge -->
                <TextView
                    android:id="@+id/txt_competition_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Maks 50 tim"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/shape_badge_prize"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Arrow Right Icon -->
        <ImageView
            android:id="@+id/img_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="#8C8C8C"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>