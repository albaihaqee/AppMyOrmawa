<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".views.auth.register.RegisterSuccessActivity">

    <!-- Blue Circle Overlay (untuk animasi expand) -->
    <View
        android:id="@+id/view_blue_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2C4EEF"
        android:visibility="visible" />

    <!-- Success Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_success_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:visibility="gone">

        <!-- Check Icon Container -->
        <FrameLayout
            android:id="@+id/check_icon_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/shape_indicator_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_check_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:contentDescription="Success"
                android:src="@drawable/ic_check"
                app:tint="#2C4EEF" />
        </FrameLayout>

        <!-- Success Title -->
        <TextView
            android:id="@+id/txt_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Successful!"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/check_icon_container" />

        <!-- Success Subtitle -->
        <TextView
            android:id="@+id/txt_success_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Registration successful! Click login to access your dashboard"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_success_title" />

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_button_primary"
            android:fontFamily="@font/poppins_medium"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_success_subtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>