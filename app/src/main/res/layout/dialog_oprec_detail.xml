<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_background">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_badge_inactive"
        android:alpha="0.3" />

    <!-- Title with Close Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/txt_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Detail &amp; Pendaftaran"
            android:textColor="#1A1A1A"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btn_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="#1A1A1A"
            android:contentDescription="Close"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Divider after Title -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="20dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Oprec Title -->
            <TextView
                android:id="@+id/txt_oprec_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Open Recruitment HMJ-TI"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Organization -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_organization"
                    app:tint="#2C4EEF"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Organisasi"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/txt_oprec_detail_organization"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="HMJ Teknologi Informasi"
                    android:textColor="#1A1A1A"
                    android:textSize="12sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Deadline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#2C4EEF"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Deadline"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/txt_oprec_detail_deadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="25 November 2025"
                    android:textColor="#1A1A1A"
                    android:textSize="12sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Participants -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_profile"
                    app:tint="#2C4EEF"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Pendaftar"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/txt_oprec_detail_participants"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="45/100 pendaftar"
                    android:textColor="#1A1A1A"
                    android:textSize="12sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="12dp" />

            <!-- Description Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Deskripsi"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Description Content -->
            <TextView
                android:id="@+id/txt_oprec_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Himpunan Mahasiswa Jurusan Teknologi Informasi membuka kesempatan bagi mahasiswa untuk bergabung dan berkontribusi dalam berbagai kegiatan."
                android:textColor="#666666"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Action Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F8F8"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register_now"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_button_primary"
            android:fontFamily="@font/poppins_medium"
            android:text="Daftar Sekarang"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>