<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Poster 3:4 Ratio -->
        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_oprec_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Oprec Poster"/>
        </androidx.cardview.widget.CardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Status Badge -->
            <TextView
                android:id="@+id/txt_oprec_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktif"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/shape_badge_active"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:layout_marginBottom="5dp"/>

            <!-- Title -->
            <TextView
                android:id="@+id/txt_oprec_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Recruitment HMJ-TI"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"/>

            <!-- Organization -->
            <TextView
                android:id="@+id/txt_oprec_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Himpunan Mahasiswa Jurusan Teknologi Informasi"
                android:textColor="#8C8C8C"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="5dp"/>

            <!-- Deadline & Participants -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Deadline -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#8C8C8C"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/txt_oprec_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 November 2025"
                    android:textColor="#8C8C8C"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"/>

                <!-- Participants -->
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_profile"
                    app:tint="#8C8C8C"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/txt_oprec_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16/100 pendaftar"
                    android:textColor="#8C8C8C"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Arrow Right Icon -->
        <ImageView
            android:id="@+id/img_arrow_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="#8C8C8C"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>